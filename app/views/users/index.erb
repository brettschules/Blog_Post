<% provide(:title, 'All users') %>
<h1>All users</h1>

<div class="container">
  <div class="row">
    <div class="col-xs-4">
      <h1>Test</h1>
    </div>
    <div class="col-xs-4">
      <%= will_paginate %>

      <ul class="users">
        <% @users.each do |user| %>
          <li>
            <%= gravatar_for user, size: 50 %>
            <%= link_to user.name, user %>
            <% if current_user.admin? %>
          | <%= link_to "delete", user, method: :delete,
                                    data: { confirm: "You sure?" } %>
              <% end %>
          </li>
        <% end %>
      </ul>

      <%= will_paginate %>

    </div>
  </div>
</div>
